
@{
    Layout = "~/Views/Shared/_UsuarioLayout.cshtml";
}
@model Pedido


<script type="text/javascript">
    $('select').selectpicker();
</script>

    <div class="container">
        <h2>Detalle del pedido</h2>
        <hr />
        <div class="col-md-12">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3">
                        <label>Nombre de negocio</label>
                        @Html.LabelFor(model => model.NombreNegocio, new { @class = "form-control", placeholder = "Nombre de Negocio" })
                    </div>
                    <div class="col-md-3">
                        <label>Precio por unidad</label>
                        @Html.LabelFor(model => model.PrecioUnidad, new { @class = "form-control", placeholder = "Precio por unidad" })
                    </div>
                    <div class="col-md-3">
                        <label>Precio por docena</label>
                        @Html.LabelFor(model => model.PrecioDocena, new { @class = "form-control", placeholder = "Precio por docena" })
                    </div>
                    <div class="col-md-3">
                        <label>Descripción</label>
                        @Html.LabelFor(model => model.Descripcion, new { @class = "form-control", placeholder = "Descripción" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-4">
                        <select class="selectpicker" multiple data-live-search="true" title="Seleccione gustos.." name="GustoDeEmpanadaSeleccionados">
                            @foreach (var item in Model.GustoEmpanada)
                            {
                                <option value="@item.IdGustoEmpanada" selected>@item.Nombre</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <select class="selectpicker" multiple data-live-search="true" title="Seleccione invitados.." name="UsuariosSeleccionados">
                            @foreach (var item in ViewBag.Mailseleccionados as MultiSelectList)
                            {
                                <option value="@item.Value" selected>@item.Text</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2 col-lg-offset-0">
                        @Html.ActionLink("Ir a la lista de Pedidos", "Lista", "Pedidos", null, new { @class = "btn btn-block btn-danger" })
                    </div>
                </div>
            </div>
            <br /><br />
        </div>

    </div>
